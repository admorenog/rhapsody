{
    "compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"rootDir": "../sources/ts",
		"outDir": "../app/js",
		"noEmit": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node"
		]
	},
	"include": [ "../sources/ts/**/*.ts" ],
	"exclude": [ "node_modules" ]

}