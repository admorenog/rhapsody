{
    "compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"sourceMap": false,
		"outDir": "../../app/js/main",
		"noEmit": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node"
		]
	},
	"include": [ "../../sources/ts/main/**/*.ts" ],
	"exclude": [ "node_modules" ]

}