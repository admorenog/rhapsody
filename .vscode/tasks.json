{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile render ts",
			"type": "typescript",
			"tsconfig": ".vscode/render/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "watch compile render ts",
			"type": "typescript",
			"tsconfig": ".vscode/render/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "compile main ts",
			"type": "typescript",
			"tsconfig": ".vscode/main/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "watch compile main ts",
			"type": "typescript",
			"tsconfig": ".vscode/main/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}