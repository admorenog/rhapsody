{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "typescript",
			"tsconfig": ".vscode/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "watch build",
			"type": "typescript",
			"tsconfig": ".vscode/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label" : "Copy templates",
			"command" : "cp",
			"args": [ "-Rf", "src/views/templates", "app/src/views/templates" ]
		},
		{
			"label" : "Clear compiled",
			"command" : "rm",
			"args" : [ "-Rf", "app" ]
		}
	]
}